{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"cache": true
		},
		"test": {
			"dependsOn": ["build"],
			"cache": false
		},
		"test:unit": {
			"dependsOn": ["build"],
			"cache": false
		},
		"test:e2e": {
			"dependsOn": ["build"],
			"cache": false
		},
		"dev": {
			"dependsOn": ["^build"],
			"persistent": true,
			"cache": false
		},
		"lint": {
			"cache": true
		}
	}
}
