{
  "name": "@pounce/core",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:all": "npm run build",
    "type-check": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "biome": "biome check --write src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eddow/@pounce/core.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/node.js",
      "default": "./dist/dom.js"
    },
    "./node": {
      "types": "./dist/index.d.ts",
      "import": "./dist/node.js",
      "default": "./dist/node.js"
    },
    "./dom": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dom.js",
      "default": "./dist/dom.js"
    },
    "./jsx-runtime": {
      "types": "./dist/runtime/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "default": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/runtime/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js",
      "default": "./dist/jsx-dev-runtime.js"
    },
    "./src": "./src/index.ts",
    "./src/*": "./src/*"
  },
  "devDependencies": {
    "@pounce/plugin": "workspace:*",
    "@biomejs/biome": "^2.2.7",
    "@playwright/test": "^1.56.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "baseline-browser-mapping": "^2.9.11",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "dockview-core": "^4.13.1",
    "jsdom": "^27.4.0",
    "mutts": "link:../../../mutts"
  },
  "packageManager": "pnpm@10.28.2"
}