{
  "name": "@pounce/core",
  "version": "1.0.0",
  "description": "Fine-grained reactive UI framework with direct DOM manipulation",
  "types": "./dist/dom.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:all": "npm run build",
    "type-check": "tsc --noEmit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --forbid-only",
    "test:ui": "playwright test --ui",
    "biome": "biome check --write src",
    "prepack": "rm -rf dist/src/demo dist/src/entry.d.ts && find dist -name '*.spec.d.ts' -delete"
  },
  "keywords": ["pounce", "reactive", "jsx", "ui", "framework", "fine-grained"],
  "author": "fmdm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eddow/pounce.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/dom.d.ts",
      "node": "./dist/node.js",
      "default": "./dist/dom.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "default": "./dist/node.js"
    },
    "./dom": {
      "types": "./dist/dom.d.ts",
      "import": "./dist/dom.js",
      "default": "./dist/dom.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "default": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js",
      "default": "./dist/jsx-dev-runtime.js"
    },
    "./src": {
      "types": "./src/index.ts",
      "node": "./src/node/index.ts",
      "default": "./src/dom/index.ts"
    },
    "./plugin": {
      "types": "./src/plugin/index.ts",
      "import": "./dist/plugin.js",
      "default": "./dist/plugin.js"
    },
    "./src/*": "./src/*"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@biomejs/biome": "^2.2.7",
    "@playwright/test": "^1.56.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "baseline-browser-mapping": "^2.9.11",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "jsdom": "^27.0.0"
  },
  "peerDependenciesMeta": {
    "jsdom": {
      "optional": true
    }
  },
  "dependencies": {
    "mutts": "^1.0.9",
    "@babel/core": "^7.28.4",
    "@babel/plugin-proposal-decorators": "^7.28.6",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/plugin-transform-typescript": "^7.28.6",
    "@babel/types": "^7.28.6",
    "vite-plugin-dts": "^4.5.3"
  },
  "files": [
    "dist",
    "src/lib/*.ts",
    "src/lib/*.md",
    "!src/lib/*.spec.ts",
    "src/dom",
    "src/node",
    "src/runtime",
    "src/types",
    "src/shared.ts",
    "src/index.ts",
    "src/index.d.ts",
    "docs",
    "src/plugin",
    "README.md",
    "LLM.md"
  ],
  "packageManager": "pnpm@10.28.2"
}