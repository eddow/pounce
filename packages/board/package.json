{
	"name": "@pounce/board",
	"version": "1.0.0",
	"description": "Full-stack meta-framework for @pounce/core with file-based routing, SSR, and middleware",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"pounce": "./dist/cli/index.js"
	},
	"exports": {
		".": {
			"browser": {
				"import": "./dist/client/index.js",
				"types": "./dist/client/index.d.ts"
			},
			"node": {
				"import": "./dist/server/index.js",
				"types": "./dist/server/index.d.ts"
			},
			"default": {
				"import": "./dist/index.js",
				"types": "./dist/index.d.ts"
			}
		},
		"./client": {
			"import": "./dist/client/index.js",
			"types": "./dist/client/index.d.ts"
		},
		"./server": {
			"import": "./dist/server/index.js",
			"types": "./dist/server/index.d.ts"
		}
	},
	"scripts": {
		"dev": "tsc --watch",
		"build": "tsc -p tsconfig.build.json",
		"test": "vitest run",
		"test:unit": "vitest --project unit",
		"test:integration": "vitest --project integration",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:coverage": "vitest --coverage",
		"test:all": "npm run test && npm run test:e2e",
		"lint": "biome check .",
		"lint:fix": "biome check --write ."
	},
	"keywords": [
		"pounce",
		"framework",
		"ssr",
		"routing",
		"middleware",
		"full-stack"
	],
	"author": "",
	"license": "MIT",
	"peerDependenciesMeta": {
		"@pounce/core": {
			"optional": true
		},
		"mutts": {
			"optional": true
		}
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"cac": "^6.7.14",
		"hono": "^4.6.14",
		"mutts": "link:../../../mutts",
		"@pounce/core": "workspace:*",
		"@pounce/toolbox": "workspace:*",
		"@pounce/pico": "workspace:*",
		"arktype": "^2.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@playwright/test": "^1.49.1",
		"@types/node": "^22.10.5",
		"@vitest/coverage-v8": "^2.1.8",
		"jsdom": "^27.4.0",
		"typescript": "^5.7.2",
		"vite": "^6.0.7",
		"vitest": "^2.1.8"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"packageManager": "pnpm@10.28.2"
}