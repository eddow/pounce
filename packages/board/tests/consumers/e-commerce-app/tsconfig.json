{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@pounce/core",
		"paths": {
			"@pounce/board": [
				"../../../src/lib/http/index.ts"
			],
			"@pounce/board/*": [
				"../../../src/lib/*"
			],
			"@pounce/board/adapters/*": [
				"../../../src/adapters/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}