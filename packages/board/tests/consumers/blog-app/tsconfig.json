{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"paths": {
			"@pounce/board": [
				"../../../src/index.ts"
			],
			"@pounce/board/*": [
				"../../../src/*"
			],
			"@pounce/board/adapters/*": [
				"../../../src/adapters/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}