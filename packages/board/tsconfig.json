{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/lib/*": [
				"./src/lib/*"
			],
			"~/adapters/*": [
				"./src/adapters/*"
			],
			"~/cli/*": [
				"./src/cli/*"
			],
			"@pounce/board": [
				"./src/server/index.ts"
			],
			"@pounce/board/client": [
				"./src/client/index.ts"
			],
			"@pounce/board/server": [
				"./src/server/index.ts"
			],
			"@pounce/core": [
				"../core/dist/index.d.ts"
			],
			"@pounce/core/*": [
				"../core/dist/*"
			],
			"@pounce/kit": [
				"../kit/src/index.ts"
			],
			"@pounce/kit/node": [
				"../kit/src/node/index.ts"
			],
			"@pounce/kit/dom": [
				"../kit/src/dom/index.ts"
			],
			"mutts": [
				"../../../mutts/dist/index.d.ts"
			],
			"mutts/*": [
				"../../../mutts/dist/*"
			],
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}