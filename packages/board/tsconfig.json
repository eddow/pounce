{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/lib/*": [
				"./src/lib/*"
			],
			"~/adapters/*": [
				"./src/adapters/*"
			],
			"~/cli/*": [
				"./src/cli/*"
			],
			"pounce-board": [
				"./src/server/index.ts"
			],
			"pounce-board/client": [
				"./src/client/index.ts"
			],
			"pounce-board/server": [
				"./src/server/index.ts"
			],
			"pounce-ts": [
				"../core/dist/lib/index"
			],
			"pounce-ts/*": [
				"../core/dist/lib/*"
			],
			"pounce-ui": [
				"../ui/dist/index"
			],
			"pounce-ui/*": [
				"../ui/dist/*"
			],
			"@pounce/kit": [
				"../kit/dist/index"
			],
			"@pounce/kit/*": [
				"../kit/dist/*"
			],
			"@pounce/board": [
				"./src/index.ts"
			],
			"@pounce/board/*": [
				"./src/*"
			],
			"mutts": [
				"../../../mutts/dist/index"
			],
			"mutts/*": [
				"../../../mutts/dist/*"
			],
			"npc-script": [
				"../../../npcs/src/index.ts"
			],
			"omni18n": [
				"../../../omni18n/src/client.ts"
			]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}