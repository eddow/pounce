{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2023",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"mutts": [
				"../../../mutts/dist/index.d.ts"
			],
			"mutts/*": [
				"../../../mutts/dist/*"
			],
			"@pounce/core": [
				"../core/dist/index.d.ts"
			],
			"@pounce/core/*": [
				"../core/dist/*"
			],
			"@pounce/core/test": [
				"../core/src/test/dom.ts"
			],
			"@pounce/kit": [
				"../kit/src/dom/index.ts"
			],
			"@pounce/kit/dom": [
				"../kit/src/dom/index.ts"
			],
			"@pounce/kit/env": [
				"../kit/src/env/index.tsx"
			]
		},
		"plugins": [
			{
				"name": "typescript-styled-plugin",
				"tags": ["componentStyle.sass"]
			}
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"**/*.test.ts",
		"tests/**/*"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}