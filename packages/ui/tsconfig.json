{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"node",
			"@pounce/core"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "."
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src/demo/**/*"
	]
}
