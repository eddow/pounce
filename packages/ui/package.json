{
	"name": "@pounce/ui",
	"version": "1.0.0",
	"description": "Headless UI primitives for Pounce applications",
	"type": "module",
	"sideEffects": false,
	"keywords": [
		"pounce",
		"headless",
		"ui",
		"components",
		"primitives"
	],
	"author": "fmdm",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eddow/pounce.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./models": {
			"types": "./dist/models/index.d.ts",
			"import": "./dist/models.js",
			"default": "./dist/models.js"
		}
	},
	"files": [
		"dist",
		"src",
		"!src/**/*.spec.*",
		"README.md",
		"LLM.md"
	],
	"scripts": {
		"build": "vite build",
		"test": "vitest run",
		"test:watch": "vitest",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@pounce/core": "workspace:*",
		"@pounce/kit": "workspace:*",
		"dockview-core": "^5.0.0",
		"mutts": "link:../../../mutts"
	},
	"devDependencies": {
		"@types/node": "^25.1.0",
		"jsdom": "^27.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.30.0"
}