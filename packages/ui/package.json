{
	"name": "@pounce/ui",
	"version": "1.0.0",
	"description": "Framework-agnostic UI component engine for Pounce",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./css": "./dist/ui.css",
		"./css-dark": "./dist/ui-dark.css"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:js && npm run build:css",
		"build:js": "vite build",
		"build:css": "npm run build:css:light && npm run build:css:dark",
		"build:css:light": "sass src/styles/index.sass dist/ui.css --style=compressed --no-source-map",
		"build:css:dark": "sass src/styles/dark.sass dist/ui-dark.css --style=compressed --no-source-map",
		"type-check": "tsc --noEmit",
		"lint": "biome check .",
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"biome": "biome check --write src"
	},
	"license": "MIT",
	"devDependencies": {
		"@pounce/plugin": "workspace:*",
		"@axe-core/playwright": "^4.10.0",
		"@biomejs/biome": "^2.2.7",
		"@playwright/test": "^1.56.1",
		"@types/node": "25.1.0",
		"jsdom": "^27.4.0",
		"sass": "^1.93.2",
		"typescript": "5.9.3",
		"vite": "7.3.1",
		"vite-plugin-dts": "^4.5.3",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@pounce/core": "workspace:*",
		"@pounce/kit": "workspace:*",
		"mutts": "link:../../../mutts",
		"dockview-core": "^4.13.1",
		"pure-glyf": "link:../../../pure-glyf"
	},
	"packageManager": "pnpm@10.28.2"
}