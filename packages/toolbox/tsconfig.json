{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@pounce/core",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"node"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"#client": [
				"./src/no-dom/client.ts"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/dom/**/*",
		"src/entry-browser.ts"
	]
}