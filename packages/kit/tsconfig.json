{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@pounce/core",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"node"
		],
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"tests/**",
		"node_modules",
		"dist"
	]
}