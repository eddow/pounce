{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@pounce/core",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"node"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@pounce/core": ["../core/dist/index.d.ts"],
			"@pounce/core/server": ["../core/dist/node.d.ts"],
			"@pounce/core/*": ["../core/dist/*"],
			"mutts": ["../../../mutts/dist/index.d.ts"],
			"mutts/*": ["../../../mutts/dist/*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"tests/**",
		"node_modules",
		"dist"
	]
}