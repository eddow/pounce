{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@pounce/core",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"node",
			"@pounce/core"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@pounce/core": [
				"../core/src/index.d.ts"
			],
			"@pounce/core/server": [
				"../core/src/node/index.ts"
			],
			"@pounce/core/*": [
				"../core/src/*"
			],
			"@pounce/core/jsx-runtime": [
				"../core/src/runtime/jsx-runtime.ts"
			],
			"mutts": [
				"../../../mutts/dist/index.d.ts"
			],
			"mutts/*": [
				"../../../mutts/dist/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}