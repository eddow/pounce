{
	"name": "@pounce/kit",
	"version": "1.0.0",
	"description": "Routing, i18n, and application utilities for Pounce",
	"type": "module",
	"keywords": [
		"pounce",
		"router",
		"i18n",
		"kit"
	],
	"author": "fmdm",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eddow/pounce.git"
	},
	"exports": {
		".": {
			"types": "./dist/dom.d.ts",
			"node": "./dist/node.js",
			"default": "./dist/dom.js"
		},
		"./dom": {
			"types": "./dist/dom.d.ts",
			"import": "./dist/dom.js",
			"default": "./dist/dom.js"
		},
		"./node": {
			"types": "./dist/node.d.ts",
			"import": "./dist/node.js",
			"default": "./dist/node.js"
		},
		"./intl": {
			"types": "./dist/intl.d.ts",
			"import": "./dist/intl.js",
			"default": "./dist/intl.js"
		},
		"./src": {
			"types": "./src/index.ts",
			"node": "./src/node/index.ts",
			"default": "./src/dom/index.ts"
		},
		"./env": {
			"types": "./dist/env.d.ts",
			"import": "./dist/env.js",
			"default": "./dist/env.js"
		},
		"./router/logic": {
			"types": "./src/router/logic.ts",
			"import": "./src/router/logic.ts",
			"default": "./src/router/logic.ts"
		},
		"./src/*": "./src/*"
	},
	"files": [
		"dist",
		"src",
		"!src/**/*.spec.*",
		"docs",
		"README.md",
		"LLM.md"
	],
	"scripts": {
		"build": "vite build",
		"test": "vitest run",
		"test:e2e": "playwright test",
		"biome": "biome check --write src",
		"prepack": "find dist -name '*.spec.d.ts' -delete 2>/dev/null; true",
		"perf": "VITE_PERF=true VITE_PERF_LOG=true pnpm run test:e2e"
	},
	"dependencies": {
		"@pounce/core": "workspace:*",
		"arktype": "^2.1.0",
		"mutts": "link:../../../mutts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@playwright/test": "^1.58.1",
		"@types/node": "25.1.0",
		"jsdom": "^27.4.0",
		"rollup": "4.57.1",
		"typescript": "^5.9.3",
		"vite": "7.3.1",
		"vite-plugin-dts": "^4.5.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.30.0"
}