{
	"name": "@pounce/pico",
	"version": "1.0.0",
	"description": "Custom elements built with pounce, pico.css and pure-glyf",
	"type": "module",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"exports": {
		".": "./src/index.ts",
		"./directives": "./src/directives/index.ts",
		"./css": "./src/lib/css.ts"
	},
	"scripts": {
		"dev": "vite dev",
		"state:types": "npx tsx scripts/generate-types.ts",
		"build": "npm run state:types && tsc && vite build",
		"preview": "vite preview",
		"type-check": "tsc --noEmit",
		"lint": "biome check .",
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"lint:menu-roles": "node ./scripts/check-menu-roles.mjs",
		"biome": "biome check --write src"
	},
	"license": "MIT",
	"devDependencies": {
		"@axe-core/playwright": "^4.10.0",
		"@babel/core": "^7.28.4",
		"@babel/plugin-proposal-decorators": "^7.28.6",
		"@babel/plugin-transform-react-jsx": "^7.28.6",
		"@babel/plugin-transform-typescript": "^7.28.6",
		"@biomejs/biome": "^2.2.7",
		"@playwright/test": "^1.56.1",
		"@types/node": "^25.0.8",
		"@vitejs/plugin-legacy": "^7.2.1",
		"@vitejs/plugin-react-swc": "^4.2.2",
		"@vitest/browser": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"jsdom": "^27.4.0",
		"sass": "^1.93.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.11",
		"vite-plugin-babel": "^1.3.2",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@picocss/pico": "^2.0.6",
		"@tabler/icons": "^3.36.1",
		"dockview-core": "^4.11.0",
		"mutts": "link:../../../mutts",
		"@pounce/core": "workspace:*",
		"pure-glyf": "link:../../../pure-glyf"
	},
	"packageManager": "pnpm@10.28.2"
}