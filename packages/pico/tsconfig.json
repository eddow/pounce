{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2023",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"outDir": "dist",
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"mutts": [
				"../../../mutts/dist/index.d.ts"
			],
			"mutts/*": [
				"../../../mutts/dist/*"
			],
			"pure-glyf": [
				"../../../pure-glyf/src/index.ts"
			],
			"pure-glyf/*": [
				"../../../pure-glyf/src/*"
			],
			"@pounce/core": [
				"../core/src/index.d.ts"
			],
			"@pounce/core/*": [
				"../core/src/*"
			],
			"@pounce/kit": [
				"../kit/src/entry-dom.ts"
			],
			"@pounce/kit/dom": [
				"../kit/src/dom/index.ts"
			],
			"@pounce/kit/entry-dom": [
				"../kit/src/entry-dom.ts"
			]
		}
	},
	"include": [
		"src/index.ts",
		"src/components/**/*",
		"src/directives/**/*",
		"src/lib/**/*",
		"src/types/**/*"
	],
	"exclude": [
		"src/routes/**/*",
		"src/main.tsx",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"tests/**/*"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}