{
	"extends": "../../../ui/tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"declaration": false,
		"emitDeclarationOnly": false,
		"declarationMap": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"baseUrl": "../../../ui",
		"paths": {
			"mutts": ["../../../mutts/dist/index.d.ts"],
			"mutts/*": ["../../../mutts/dist/*"],
			"@pounce/core": ["../core/dist/index.d.ts"],
			"@pounce/core/*": ["../core/dist/*"],
			"@pounce/core/test": ["../core/src/test/dom.ts"],
			"@pounce/kit": ["../kit/src/index.ts"],
			"@pounce/kit/dom": ["../kit/src/dom/index.ts"],
			"@pounce/ui": ["./src/index.ts"]
		}
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx",
		"../src/**/*.ts",
		"../src/**/*.tsx",
		"../../../ui/src/**/*.ts",
		"../../../ui/src/**/*.tsx",
		"../../../ui/demo/**/*.ts",
		"../../../ui/demo/**/*.tsx"
	]
}
