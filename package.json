{
	"name": "@pounce/monorepo",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "turbo run build",
		"build:watch": "turbo watch build",
		"test": "turbo run test",
		"lint": "turbo run lint && biome check packages/",
		"dev": "turbo run dev",
		"biome": "biome check --write packages/",
		"biome:unsafe": "biome check --write --unsafe packages/",
		"profile:ui": "turbo run profile --filter=@pounce/ui",
		"dev:all": "turbo run build && (turbo run dev --filter=@pounce/adapter-pico & pnpm --dir ../red-hist run dev & wait)"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@vitest/browser": "^4.0.18",
		"@vitest/browser-playwright": "^4.0.18",
		"playwright": "^1.58.2",
		"pure-glyf": "workspace:*",
		"turbo": "^2.8.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"overrides": {
			"@types/node": "25.1.0",
			"rollup": "4.57.1",
			"vite": "7.3.1",
			"mutts": "link:../mutts",
			"typescript": "5.9.3"
		}
	},
	"packageManager": "pnpm@10.30.0"
}